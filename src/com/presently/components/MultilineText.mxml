<mx:TextArea xmlns:mx="http://www.adobe.com/2006/mxml" editable="false"
    selectable="true" backgroundColor="0x333333" borderStyle="none"
    backgroundAlpha="0.0" paddingTop="0" verticalScrollPolicy="off"
    useHandCursor="true" mouseEnabled="true" focusEnabled="false"
    creationComplete="addUpdateHandler(event)" mouseFocusEnabled="false">
    <mx:Script>
        <![CDATA[
            import mx.events.FlexEvent;

            override protected function childrenCreated():void {
                super.childrenCreated();

                //addEventListener(FlexEvent.UPDATE_COMPLETE, handleUpdate);
                removeEventListener(MouseEvent.MOUSE_WHEEL, mouseWheelHandler);
            }

            private function addUpdateHandler(event:FlexEvent):void {
                addEventListener(FlexEvent.UPDATE_COMPLETE, handleUpdate);
            }

            private function handleUpdate(event:FlexEvent):void {
                this.condenseWhite = true;
                this.validateNow();
                var txtheight:Number = this.textHeight;
                if (this.height < txtheight) {
                    this.explicitHeight = txtheight + 6;
                }
            }
        ]]>
    </mx:Script>
</mx:TextArea>
