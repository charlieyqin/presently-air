<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" horizontalScrollPolicy="off" verticalScrollPolicy="off"
    initialize="init()">
<mx:Script>
    <![CDATA[
        private var _offset:Rectangle;

        private function init():void {
            addEventListener(Event.ADDED_TO_STAGE, handleAddedToStage);
        }

        protected function handleAddedToStage(event:Event):void {
            stage.nativeWindow.addEventListener(NativeWindowBoundsEvent.RESIZE, handleWindowResize);
        }

        private function handleWindowResize(boundsEvent:NativeWindowBoundsEvent):void {
            this.width = boundsEvent.afterBounds.width;
            this.height = boundsEvent.afterBounds.height;
        }
    ]]>
</mx:Script>
</mx:Canvas>
