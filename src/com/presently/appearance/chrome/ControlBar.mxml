<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:chrome="com.presently.appearance.chrome.*"
    width="100%" height="50" paddingLeft="0" paddingRight="0" verticalScrollPolicy="off" styleName="controlBar">
<mx:Script>
    <![CDATA[
        [Bindable]
        private var _accountName:String = "";

        public function set accountName(value:String):void {
            _accountName = value;
        }

        public function get accountName():String {
            return _accountName;
        }
    ]]>
</mx:Script>

    <mx:Image source="@Embed('assets/title.png')" top="3" left="0" />

    <mx:Label id="accountNameLbl" fontSize="12" top="7" left="135"
        color="#999999" text="{_accountName}" fontWeight="bold" />

    <chrome:WindowControls right="0" top="8" />
</mx:Canvas>
